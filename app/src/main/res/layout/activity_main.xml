<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.it.fan.mycall.activity.MainActivity">
    <TextView
        android:visibility="gone"
        android:text="拨号助手"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/textf5f5f5"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/activity_main_tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tl:tl_tab_space_equal="false"
        tl:paddingEnd="0dp"
        tl:paddingStart="0dp"
        tl:tl_bar_color="#ffffff"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_corner_radius="8dp"
        tl:tl_tab_padding="15dp"/>

    <FrameLayout
        android:id="@+id/activity_main_contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>



</LinearLayout>
