<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="编辑联系人信息"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@id/tv_title"
            android:tint="@color/black" />
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:textSize="14sp"
            android:layout_toRightOf="@id/iv_back"
            android:layout_alignBottom="@id/iv_back"
            android:layout_marginBottom="4dp"
            android:text="返回"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_person_head"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="34dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#F3F3F3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目名称"
                    android:layout_marginLeft="14dp"
                    android:textColor="#A0A0A0"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/et_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:hint="请输入项目名称"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F3F3F3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="患者姓名"
                    android:layout_marginLeft="14dp"
                    android:textColor="#A0A0A0"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/et_patient_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:hint="请输入患者姓名"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F3F3F3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手  机  号"
                    android:layout_marginLeft="14dp"
                    android:textColor="#A0A0A0"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="#1c87e5"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:hint="请输入手机号"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F3F3F3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备        注"
                    android:layout_marginLeft="14dp"
                    android:textColor="#A0A0A0"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/et_mark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="#1c87e5"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:hint="请输入备注"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F3F3F3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指定医院"
                    android:layout_marginLeft="14dp"
                    android:textColor="#A0A0A0"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/et_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:hint="请输入指定医院"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F3F3F3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指定医生"
                    android:layout_marginLeft="14dp"
                    android:textColor="#A0A0A0"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/et_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:hint="请输入指定医生"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F3F3F3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标签"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
                <FrameLayout
                    android:id="@+id/fl_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <com.it.fan.mycall.view.RoundButton
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textColor="#1C88E6"
                        android:text="本人"
                        android:textSize="13sp"
                        app:btnCornerRadius="15dp"
                        app:btn_normalStrokeWidth="1dp"
                        app:btn_normalStrokeColor="#1C88E6"
                        app:btn_normalSolidColor="#ffe9f7ff"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_select_tag"
                        android:scaleType="centerCrop"
                        android:layout_gravity="bottom|right"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <com.it.fan.mycall.view.RoundButton
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textColor="#F39257"
                        android:text="家属"
                        android:textSize="13sp"
                        app:btnCornerRadius="15dp"
                        app:btn_normalStrokeWidth="1dp"
                        app:btn_normalStrokeColor="#F39257"
                        app:btn_normalSolidColor="#fffff6e9"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_select_tag"
                        android:scaleType="centerCrop"
                        android:visibility="invisible"
                        android:layout_gravity="bottom|right"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <com.it.fan.mycall.view.RoundButton
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textColor="#4CAA73"
                        android:text="其他"
                        android:textSize="13sp"
                        app:btnCornerRadius="15dp"
                        app:btn_normalStrokeWidth="1dp"
                        app:btn_normalStrokeColor="#4CAA73"
                        app:btn_normalSolidColor="#fff5fff7"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_select_tag"
                        android:scaleType="centerCrop"
                        android:visibility="invisible"
                        android:layout_gravity="bottom|right"/>
                </FrameLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f3f3f3">
                <com.it.fan.mycall.view.RoundButton
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="保存至已有联系人"
                    android:textColor="#1C88E6"
                    android:textSize="16sp"
                    app:btnCornerRadius="5dp"
                    app:btn_normalSolidColor="@color/white"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="24dp"/>
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>